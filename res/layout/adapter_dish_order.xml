<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/dish_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#aaaaaa"
        android:contentDescription="@string/dish_image" />

    <RelativeLayout
        android:id="@+id/dish_item_list"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/dish_img"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/dish_img" >

        <TextView
            android:id="@+id/dish_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="菜品名称"
            android:textColor="#444444"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dish_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_name_label"
            android:layout_marginTop="2dp"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dish_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textview_radius"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dish_taste_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/dish_size_label"
            android:background="@drawable/textview_radius" />

        <TextView
            android:id="@+id/dish_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="￥60"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dish_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="待提交"
            android:textColor="@color/red" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_control_panel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/dish_img"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/dish_img"
        android:background="#E0E0E0"
        android:visibility="gone" >

        <TextView
            android:id="@+id/dish_name_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="菜品："
            android:textColor="#555555"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dish_name_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dish_name_label2"
            android:layout_toRightOf="@+id/dish_name_label2"
            android:textColor="#444444"
            android:text="回锅肉"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dish_state_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="状态："
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#555555"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dish_state_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dish_state_label2"
            android:layout_toRightOf="@+id/dish_state_label2"
            android:text="待提交"
            android:textColor="@color/red"
            android:textSize="17sp" />

        <Button
            android:id="@+id/del_order_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF6666"
            android:text="@string/delete"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>